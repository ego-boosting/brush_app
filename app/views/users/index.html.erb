<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'userinfor', user: current_user,book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tboay>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%=image_tag user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tboay>
      </table>
    </div>
  </div>
</div>