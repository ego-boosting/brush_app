<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/userinfor', user: @user, book: @new_book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%=image_tag @user.get_profile_image(100,100) %>
              <div><%= @user.name %></div>
              <% end %>
            </td>

            <td><%= link_to @book.title , book_path(@book) %></td>

            <td><%= @book.body %></td>

            <td class=<%= "favorite-btn-" + @book.id.to_s %>><%= render "favorites/btn", book: @book %></td>

            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-comfirm" => "Are u sure" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>