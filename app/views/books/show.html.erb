<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/userinfor', user: current_user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to users_path(@user) do %>
              <%=image_tag @user.get_profile_image(100,100) %>
              <div>
                <%= @user.name %>
              </div>
              <% end %>
            </td>
            <td>
              <%= link_to @books.title , book_path(@books) %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "destroy", book_path(@books.id), class: "btn btn-sm btn-danger", method: :delete, "data-comfirm" => "Are u sure" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>